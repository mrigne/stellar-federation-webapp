mat-toolbar.header-toolbar
  margin-bottom 32px

img.logo-img
  height 50px
  opacity 0.6
  transition 0.5s
  margin-right 20px

  &:hover
    opacity: 1
    transition 0.5s

div.custom-button
  font-family Flamenco
  font-size 24px
  opacity 0.6
  transition 0.5s
  cursor: pointer
  outline: none

  &:hover
    opacity 1
    transition 0.5s

  &.active-link
    opacity 1

  span.icon-label
    margin-left 3px

  mat-icon.header-icon
    vertical-align -20%
span.spacer
    flex: 1 1 auto

span.greetings
    margin-right 20px
    font-family Flamenco
